#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include "jacobi.h"
#include "matrix.h"

double ** jacobi(double **u1, double **u2, double **f, int N, int maxit,double tol){
	int it = 0;
	double frob;
	double deltaSq = 4.0/((N-1)*(N-1));
	while(it < maxit && frob>tol){
		frob = update(u1,u2,f,N,deltaSq);
		frob = update(u2,u1,f,N,deltaSq);
		it +=2;
	}
	printf("%f ",frob);
	printf("%f\n",tol);
	return u2;
}

